---
#  
#  Sample playbook for creating a VM on a vSphere Cluster by cloning from a template.
#
- name: Create a VM from a Template and place into a folder, connect it on a given dvPortGroup
  hosts: all
  gather_facts: false
  connection: local
  
  vars_files: 
     - ./vars/vcenter-info.yml

  tasks:
     - name: Create VM from template
       vmware_guest: 
          validate_certs: False
          hostname: "{{ vcenter_hostname }}"
          username: "{{ vcenter_user }}"
          password: "{{ vcenter_pass }}"
          datacenter: "{{ datacenter }}"
          cluster: "{{ cluster_01 }}"
          template: "{{ vm_template_name }}"
          name: "{{ inventory_hostname }}"
          folder: "{{ vm_folder_name }}"
          state: poweredoff
          hardware:
             memory_mb: "{{ vm_memory | default(4096) }}"
             num_cpus: 2
             scsi: paravirtual
          disk:
          - size_gb: 8
            type: thin
            datastore: "{{ datastore_name }}"
          networks:
          - name: "{{ network }}"
            device_type: vmxnet3
            type: "{{ ip_type }}"
            ip: "{{ ip_address }}"
            netmask: "{{ netmask }}"
            gateway: "{{ ip_gateway }}"
            domain: "{{ domain_name }}"
            dns_servers: 
            - "{{ dns1 }}"
          customization:
             hostname: "{{ inventory_hostname }}"
          wait_for_ip_address: no
       delegate_to: localhost
     
     - name: Modify VM into the right dvPortGroup
       vsphere_guest:
          vcenter_hostname: "{{ vcenter_hostname }}"
          username: "{{ vcenter_user }}"
          password: "{{ vcenter_pass }}"
          validate_certs: no
          guest: "{{ inventory_hostname }}"
          state: reconfigured
          vm_nic:
             nic1:
                network: "{{ dvportgroup_name }}"
                network_type: dvs
          esxi:
             datacenter: "{{ datacenter }}"
       delegate_to: localhost

     - name: Power On VM
       vsphere_guest:
          vcenter_hostname: "{{ vcenter_hostname }}"
          username: "{{ vcenter_user }}"
          password: "{{ vcenter_pass }}"
          validate_certs: no
          guest: "{{ inventory_hostname }}"
          state: powered_on
          esxi:
             datacenter: "{{ datacenter }}"
       delegate_to: localhost

